{
    "env": {
        "browser": true,
        "es6": true,
        "mocha": true
    },
    "parser": "@typescript-eslint/parser",
    "ignorePatterns": "build/**",
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2022,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": "off",
        "no-case-declarations": "off",
        "no-fallthrough": "off"
    }
}